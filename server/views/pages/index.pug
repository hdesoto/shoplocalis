      // Modals
      // Modal PRODUCT DETAILS
      #ProductDetail1.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
        .modal-dialog(role='document')
          .modal-content
            .modal-header
              h5#exampleModalLabel.modal-title Fresas
              button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') ×
            .modal-body
              img.card-img-top(src='./img/kiwi.jpg', alt='Card image cap')
              p.modal-description
                | Lorem ipsum dolor sit amet, consectetur adipisicing elit. Nemo ut mollitia ipsam, quo voluptatibus aspernatur molestias? Maiores voluptatibus deleniti recusandae, natus eligendi nemo tenetur, ipsa temporibus voluptate aliquam voluptates consequatur.
            .modal-footer
              button.btn.btn-success(type='button')
                i.fa.fa-cart-plus
                |  Añadir
              button.btn.btn-outline-secondary(type='button', data-dismiss='modal') Cerrar
      // Modal LOGIN / REGISTER
      #modal-login.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
        .modal-dialog(role='document')
          .modal-content
            .modal-header
              ul#myTab.nav.nav-tabs(role='tablist')
                li.nav-item
                  a#login-tab.nav-link.active(data-toggle='tab', href='#login', role='tab', aria-controls='login', aria-expanded='true') Ingresar
                li.nav-item
                  a#signup-tab.nav-link(data-toggle='tab', href='#signup', role='tab', aria-controls='singup') Registrarse
            .modal-body
              #myTabContent.tab-content
                // LOGIN MODAL
                #login.tab-pane.fade.show.active(role='tabpanel', aria-labelledby='login-tab')
                  form.form-signin
                    label.sr-only(for='inputEmail') Email
                    input#inputEmail.form-control(type='email', placeholder='Email address', required='', autofocus='')
                    label.sr-only(for='inputPassword') Password
                    input#inputPassword.form-control(type='password', placeholder='Password', required='')
                    .checkbox
                      label
                        input(type='checkbox', value='remember-me')
                        |  Recordarme
                    button.btn.btn-lg.btn-primary.btn-block(type='submit') Ingresar
                // REGISTER MODAL
                #signup.tab-pane.fade(role='tabpanel', aria-labelledby='signup-tab')
                  form.form-horizontal(role='form', method='POST', action='/register')
                    .row
                      .col-md-12
                        .form-group
                          label.sr-only(for='name') Nombre completo
                          .input-group.mb-2.mr-sm-2.mb-sm-0
                            .input-group-addon(style='width: 2.6rem')
                              i.fa.fa-user
                            input#name.form-control(type='text', name='name', placeholder='Nombre Completo', required='', autofocus='')
                      //
                        <div class="col-md-3">
                        <div class="form-control-feedback">
                        <span class="text-danger align-middle">
                      // Put name validation error messages here
                      //
                        </span>
                        </div>
                        </div>
                    .row
                      .col-md-12
                        .form-group
                          label.sr-only(for='email') E-Mail
                          .input-group.mb-2.mr-sm-2.mb-sm-0
                            .input-group-addon(style='width: 2.6rem')
                              i.fa.fa-at
                            input#email.form-control(type='text', name='email', placeholder='nombre@ejemplo.com', required='', autofocus='')
                      //
                        <div class="col-md-3">
                        <div class="form-control-feedback">
                        <span class="text-danger align-middle">
                      // Put e-mail validation error messages here
                      //
                        </span>
                        </div>
                        </div>
                    .row
                      .col-md-12
                        .form-group.has-danger
                          label.sr-only(for='password') Password
                          .input-group.mb-2.mr-sm-2.mb-sm-0
                            .input-group-addon(style='width: 2.6rem')
                              i.fa.fa-key
                            input#password.form-control(type='password', name='password', placeholder='Password', required='')
                      //
                        <div class="col-md-3">
                        <div class="form-control-feedback">
                        <span class="text-danger align-middle">
                        <i class="fa fa-close"> Example Error Message</i>
                        </span>
                        </div>
                        </div>
                    .row
                      .col-md-12
                        .form-group
                          label.sr-only(for='password-confirm') Password
                          .input-group.mb-2.mr-sm-2.mb-sm-0
                            .input-group-addon(style='width: 2.6rem')
                              i.fa.fa-key
                            input#password-confirm.form-control(type='password', name='password-confirmation', placeholder='Repita password', required='')
                    .row
                      // <div class="col-md-3"></div>
                      .col-md-12
                        button.btn.btn-lg.btn-block.btn-success.btn-signup(type='submit') Registrar
